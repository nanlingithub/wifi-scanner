[MASTER]
# 并行作业数
jobs=4

# Python文件扩展名
extension-pkg-whitelist=numpy,scipy,matplotlib

# 忽略的文件/目录
ignore=CVS,__pycache__,.git,.pytest_cache,htmlcov
ignore-patterns=test_.*?\.py,.*_test\.py

[MESSAGES CONTROL]
# 禁用的检查（常见误报）
disable=
    C0103,  # 变量名不符合规范（允许短变量名）
    C0114,  # 缺少模块文档字符串
    C0115,  # 缺少类文档字符串
    C0116,  # 缺少函数/方法文档字符串
    R0902,  # 类属性过多
    R0913,  # 函数参数过多
    R0914,  # 局部变量过多
    W0212,  # 访问受保护成员（测试需要）
    W0511,  # TODO/FIXME注释
    E1101,  # 无此成员（动态属性误报）
    C0301,  # 行过长（由black处理）
    R0801,  # 重复代码（允许一定重复）

[FORMAT]
# 最大行长度（与black一致）
max-line-length=120

# 缩进
indent-string='    '
indent-after-paren=4

[BASIC]
# 命名规范
good-names=i,j,k,ex,Run,_,x,y,z,ax,xi,yi,zi,df,np,pd

# 变量名规范（允许2-30字符）
variable-rgx=[a-z_][a-z0-9_]{1,30}$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
attr-rgx=[a-z_][a-z0-9_]{1,30}$
argument-rgx=[a-z_][a-z0-9_]{1,30}$
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{1,30}|(__.*__))$
function-rgx=[a-z_][a-z0-9_]{1,50}$
method-rgx=[a-z_][a-z0-9_]{1,50}$
class-rgx=[A-Z_][a-zA-Z0-9]+$
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$

[DESIGN]
# 复杂度限制
max-args=8
max-locals=20
max-returns=6
max-branches=15
max-statements=60
max-parents=7
max-attributes=15
min-public-methods=1
max-public-methods=25

[IMPORTS]
# 导入顺序检查
import-graph=
ext-import-graph=
int-import-graph=

[CLASSES]
# 类相关
valid-metaclass-classmethod-first-arg=cls
valid-classmethod-first-arg=cls

[EXCEPTIONS]
# 异常处理
overgeneral-exceptions=Exception
